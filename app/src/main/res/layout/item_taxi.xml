<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/taxi_info_text_view"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:textStyle="bold"
        tools:text="TAXI TEST" />

    <ImageView
        android:id="@+id/call_viber_image_view"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@color/callPurpleColor"
        android:padding="16dp"
        android:src="@drawable/ic_viber" />

    <ImageView
        android:id="@+id/call_phone_image_view"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@color/callBlueColor"
        android:padding="16dp"
        android:src="@drawable/ic_call" />

</LinearLayout>